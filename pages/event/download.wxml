<!--pages/event/download.wxml-->
<scroll-view style='width:{{phoneW}}px;height:{{phoneH}};margin:0 0 0 0' scroll-x="true">

  <image style="width:{{imgW}}px;height:{{imgH}}px;" src="https://cn.bing.com{{imgUrl}}" mode='aspectFill'></image>

</scroll-view>
<!-- <view class='container'>
  <text class='img-description'>{{imgs.copyright}}</text>
</view> -->
<view style="position:fixed; bottom:120px; z-index:999;width:{{phoneW}}px;  align-items: center;  flex-direction: row;  display: flex;">
  <view>
    <button id='download' loading="{{saveOriginalLoading}}" disabled='{{disabled}}' class='iconfont icon-download' style='position:fixed; right:130px;' bindtap='Download'> </button>
  </view>
  <view>
    <button id='downloadPhoneSize' loading="{{saveOriginalLoading}}" disabled='{{disabled}}' class='iconfont icon-phonedownload' style='position:fixed;right:75px' bindtap='DownloadPhoneSize'> </button>
  </view>
  <view>
    <button open-type="share" class='iconfont icon-share' style='position:fixed; right:20px'></button>
  </view>
</view>
